<% include header.ejs %>
<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="bgc-white bd bdrs-3 p-20 mB-20">
            <h4 class="c-grey-900 mB-20">Users List</h4>
            <table id="dataTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
              <thead>
                <tr>

                  <th>User Image</th>
                  <th>User Name</th>
                  <th>User Phone</th>
                  <th>Country</th>
                </tr>
              </thead>

              <tbody>


                <%
                users.users_list.forEach(user => { %>

                <tr>

                  <td>
                    <%   if (user.image != null) { %>
                    <img class="w-2r bdrs-50p"
                      src="/../api/v1/files_dashboard/user_avatars/<%= user._id %>/<%= user.image %>" alt="" 
                      onerror="this.src='/image_holder_ur_circle.png'">
                    <% } else {  %>
                    <img class="w-2r bdrs-50p" src="/image_holder_ur_circle.png" alt="">
                    <%
                                        }%>
                  </td>
                  <td> <%  if ( user.username == null) {%>
                    No name
                <%} else {%>
                    <%=  user.username %>
                <%}%></td>
                  <td> <%= user.phone %></td>
                  <td> <%= user.country %></td>
                </tr>
                <%  }); %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<% include footer.ejs %>